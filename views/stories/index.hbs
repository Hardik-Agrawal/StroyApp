<h1>Stories</h1>
<div class="row">

    {{#if stories}}
        {{#each stories}}
            <div class="col s12 m4">
                <div class="card-image">
                    {{!-- todo: edit Icon --}}
                </div>

                <div class="card-content centre-align">
                    <h5>{{ title }}</h5>
                    <p>{{stripTags (turncate body 200) }}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="img">
                        <a href="/stories/user/{{user._id}}">{{ user.displayName }}</a>
                    </div>
                </div>

                <div class="card-action centre-align">
                    <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <h5>No stories to show</h5>
    {{/if}}
</div>